<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPinked"

    android:layout_margin="8dp"
    tools:context=".fragments.savingfragment.SavingReminderFragment">

    <EditText
        android:id="@+id/et_reminder_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:layout_margin="13dp"
        android:textColor="@color/colorPink"
        android:fontFamily="casual"
        android:textSize="23sp"
        android:hint="@string/reminder_title"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_margin="13dp"

        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reminder_title_edit" />

    <EditText
        android:id="@+id/et_reminder_description_edit"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:layout_margin="13dp"
        android:gravity="center"
        android:textColor="@color/colorPink"
        android:fontFamily="casual"
        android:textSize="23sp"
        android:hint="@string/description"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="13dp"

        android:background="@color/colorRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_reminder_description_edit" />

    <ImageView
        android:id="@+id/imageView_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/tv_title_of_reminder_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:textColor="@color/colorPink"
        android:fontFamily="casual"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_edit"
        app:layout_constraintStart_toEndOf="@+id/imageView_edit"
        app:layout_constraintTop_toTopOf="@+id/imageView_edit"
        app:layout_constraintVertical_bias="0.517" />

    <TextView
        android:id="@+id/tv_name_of_reminder_location_edit"
        android:layout_width="59dp"
        android:layout_height="17dp"
        android:textColor="@color/colorPink"
        android:fontFamily="casual"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/tv_title_of_reminder_edit"
        app:layout_constraintTop_toTopOf="@+id/imageView_edit"
        app:layout_constraintVertical_bias="0.548" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        android:clickable="true"
        android:src="@drawable/ic_saving"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>